@model UpdateEnrollmentStatusModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "UpdatePaymentStatus";
}

<h2>Update enrollment status</h2>
<a class="my-2 btn btn-primary" asp-action="AllEnrollments">Back</a>

<form style="width: 50%;" asp-action="UpdateEnrollmentStatus" class="pt-2">

    <input type="hidden" asp-for="EnrollmentId" />

    <div class="mb-2">
        <label>Enrollmentstatus</label>
        <select class="form-control" asp-for="EnrollmentStatusId" asp-items="@Model.EnrollmentStatusList">
            <option value="">Select enrollment status</option>
        </select>
        <span class="text-danger" asp-validation-for="EnrollmentStatusId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>

    @if (TempData["msg"] != null)
    {
        <div class="text-info my-2">
            @TempData["msg"]
        </div>
    }
</form>

